<header>
  <% if (page.cover) { %>
    <a href="<%= page.permalink %>"><img src="<%= page.cover %>"></a>
  <% } %>
  <h1><%= page.title %></h1>
  <aside>
    <% if (showDate) { %>
    <time datetime="<%= page.date.format('YYY-MM-DD') %>">
      <%= page.date.format(theme.date_format) %>
    </time>
    <% } %>
    <ul>
    <% (page.tags || []).forEach(tag => { %>
      <li><a href="<%= url_for(tag.path) %>"><%= tag.name %></a></li>
    <% }) %>
    </ul>
    <br>
    <br>
    <%- page.content %>
</aside>
  </header>
